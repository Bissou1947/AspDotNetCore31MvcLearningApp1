@model BookVM

<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrEmpty(Model.bookCoverPhotoPathToDB) && !string.IsNullOrWhiteSpace(Model.bookCoverPhotoPathToDB))
    {
        <img asp-append-version="true" src="@Model.bookCoverPhotoPathToDB" class="card-img-top img-thumbnail" alt="...">
    }
    else
    {
        <img asp-append-version="true" src="~/images/logo.jpg" class="card-img-top img-thumbnail" alt="...">
    }

    <div class="card-body">
        <h5 class="card-title">title: @Model.title</h5>
        <p class="card-text">author: @Model.author</p>
        <a asp-controller="Book" asp-action="GetBookById" asp-route-id="@Model.id" class="btn btn-primary">More</a>
    </div>
</div>